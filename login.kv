#:include connected.kv
#:include signup.kv

<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'

        Label:
            text: 'Bem vindo a MV.ARLINES.\nSua melhor opção para viajar o Brasil.\nRealize seu cadastro ou entre na sua conta!'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Usuário'
                halign: 'left'
                text_size: root.width-20,40

            TextInput:
                id: login
                multiline:False
                font_size: 40

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Senha'
                halign: 'left'
                text_size: root.width-20,40

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 40

        Button:
            text: 'Entrar'
            font_size: 24

            on_press: root.do_login(login.text, password.text)
        
        Button:
            text: 'Cadastrar'
            font_size: 24

            on_press: root.call_signup()